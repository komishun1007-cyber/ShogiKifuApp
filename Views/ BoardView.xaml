<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShogiKifuApp.Views.BoardView">
    <VerticalStackLayout Spacing="8">
        <!-- 後手の持ち駒 -->
        <Frame Padding="8" BorderColor="Gray" CornerRadius="4">
            <VerticalStackLayout>
                <Label Text="後手の持ち駒" FontSize="12" FontAttributes="Bold" TextColor="Red"/>
                <Label x:Name="GoteCapturedLabel" Text="なし" FontSize="14" LineBreakMode="WordWrap"/>
            </VerticalStackLayout>
        </Frame>

        <!-- 将棋盤 -->
        <Grid x:Name="BoardGrid" 
              RowSpacing="1" 
              ColumnSpacing="1" 
              BackgroundColor="Black"
              Padding="4"
              HorizontalOptions="Center"/>

        <!-- 先手の持ち駒 -->
        <Frame Padding="8" BorderColor="Gray" CornerRadius="4">
            <VerticalStackLayout>
                <Label Text="先手の持ち駒" FontSize="12" FontAttributes="Bold" TextColor="Blue"/>
                <Label x:Name="SenteCapturedLabel" Text="なし" FontSize="14" LineBreakMode="WordWrap"/>
            </VerticalStackLayout>
        </Frame>

        <!-- 手数表示 -->
        <Label x:Name="MoveCountLabel" 
               Text="0手目 / 0手" 
               HorizontalOptions="Center" 
               FontAttributes="Bold"
               FontSize="16"
               Margin="0,8,0,0"/>

        <!-- 指し手スライダー表示 -->
        <Frame Padding="8" BorderColor="LightGray" CornerRadius="8" Margin="12,0">
            <VerticalStackLayout Spacing="4">
                <!-- 前後の指し手表示 -->
                <Grid ColumnDefinitions="*,*,*,*,*" RowDefinitions="Auto" ColumnSpacing="4">
                    <Label Grid.Column="0" x:Name="Move1Label" Text="" FontSize="12" TextColor="Gray" HorizontalTextAlignment="Center"/>
                    <Label Grid.Column="1" x:Name="Move2Label" Text="" FontSize="12" TextColor="Gray" HorizontalTextAlignment="Center"/>
                    <Label Grid.Column="2" x:Name="Move3Label" Text="" FontSize="14" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                    <Label Grid.Column="3" x:Name="Move4Label" Text="" FontSize="12" TextColor="Gray" HorizontalTextAlignment="Center"/>
                    <Label Grid.Column="4" x:Name="Move5Label" Text="" FontSize="12" TextColor="Gray" HorizontalTextAlignment="Center"/>
                </Grid>
                
                <!-- スライダー -->
                <Slider x:Name="MoveSlider"
                        Minimum="0"
                        Maximum="0"
                        Value="0"
                        MinimumTrackColor="Blue"
                        MaximumTrackColor="LightGray"
                        ValueChanged="OnSliderValueChanged"
                        Margin="0,4,0,0"/>
            </VerticalStackLayout>
        </Frame>

        <!-- 再生ボタン -->
        <HorizontalStackLayout Spacing="8" HorizontalOptions="Center" Margin="0,4,0,0">
            <Button x:Name="ResetButton" Text="⏮ 最初" WidthRequest="80" Clicked="OnResetClicked"/>
            <Button x:Name="PrevButton" Text="◀ 戻る" WidthRequest="80" Clicked="OnPrevClicked"/>
            <Button x:Name="NextButton" Text="進む ▶" WidthRequest="80" Clicked="OnNextClicked"/>
            <Button x:Name="LastButton" Text="最後 ⏭" WidthRequest="80" Clicked="OnLastClicked"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentView>