<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ShogiKifuApp.MainPage"
    Title="棋譜一覧">

    <Grid Padding="12" RowDefinitions="*,Auto">
        
        <CollectionView x:Name="KifuList"
                        Grid.Row="0"
                        SelectionMode="Single"
                        SelectionChanged="OnSelectionChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="12" Margin="0,4" HasShadow="True" CornerRadius="8">
                        <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                            <Label Grid.Row="0" Grid.Column="0"
                                   Text="{Binding DisplayTitle}" 
                                   FontAttributes="Bold" 
                                   FontSize="16"/>
                            <Label Grid.Row="1" Grid.Column="0"
                                   Text="{Binding Subtitle}" 
                                   FontSize="12" 
                                   TextColor="Gray"/>
                            <Label Grid.Row="0" Grid.RowSpan="2" Grid.Column="1"
                                   Text="›" 
                                   FontSize="24" 
                                   VerticalOptions="Center"
                                   TextColor="Gray"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <HorizontalStackLayout Grid.Row="1" 
                               Spacing="8" 
                               Padding="0,12,0,0"
                               HorizontalOptions="Center">
            <Button Text="＋ 新規作成"
                    Clicked="OnAddClicked"
                    WidthRequest="120"/>
            <Button Text="📁 インポート"
                    Clicked="OnImportClicked"
                    WidthRequest="120"/>
            <Button Text="📋 貼り付け"
                    Clicked="OnPasteClicked"
                    WidthRequest="120"/>
        </HorizontalStackLayout>

    </Grid>
</ContentPage>