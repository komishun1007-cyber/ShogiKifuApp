<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ShogiKifuApp.MainPage"
    Title="棋譜一覧">

    <Grid Padding="12">
        <CollectionView x:Name="KifuList"
                SelectionMode="Single"
                SelectionChanged="OnSelectionChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Padding="10">
                        <Label Text="{Binding Title}" FontAttributes="Bold" FontSize="16"/>
                        <Label Text="{Binding Date, StringFormat='{0:yyyy/MM/dd HH:mm}'}" FontSize="12" TextColor="Gray"/>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- 右下に追加ボタン -->
        <Button Text="＋"
                Clicked="OnAddClicked"
                WidthRequest="56" HeightRequest="56"
                CornerRadius="28"
                VerticalOptions="End"
                HorizontalOptions="End"
                Margin="16"/>

        <Button Text="インポート"
        Clicked="OnImportClicked"
        HorizontalOptions="Start"
        VerticalOptions="End"
        Margin="16"/>

        <Button Text="コピペ"
        Clicked="OnPasteClicked"
        WidthRequest="56" HeightRequest="56"
        CornerRadius="28"/>
    </Grid>
</ContentPage>
