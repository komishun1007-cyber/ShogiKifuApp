<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ShogiKifuApp.MainPage"
    Title="棋譜一覧">

    <Grid Padding="12" RowDefinitions="*,Auto">
        
        <CollectionView x:Name="KifuList"
                        Grid.Row="0"
                        SelectionMode="Single"
                        SelectionChanged="OnSelectionChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="12" Margin="0,4" HasShadow="True" CornerRadius="8">
                        <Grid ColumnDefinitions="*,Auto,Auto" RowDefinitions="Auto,Auto,Auto">
                            <!-- タイトル -->
                            <Label Grid.Row="0" Grid.Column="0"
                                   Text="{Binding DisplayTitle}" 
                                   FontAttributes="Bold" 
                                   FontSize="16"/>
                            
                            <!-- 勝敗マーク -->
                            <Label Grid.Row="0" Grid.Column="1"
                                   Text="{Binding WinnerSymbol}"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   TextColor="Red"
                                   Margin="8,0"
                                   VerticalOptions="Center"/>
                            
                            <!-- 対局者情報 -->
                            <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                   FontSize="13"
                                   TextColor="DarkSlateGray"
                                   Margin="0,4,0,0">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="先手: " FontAttributes="Bold"/>
                                        <Span Text="{Binding Sente}"/>
                                        <Span Text="  後手: " FontAttributes="Bold"/>
                                        <Span Text="{Binding Gote}"/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            
                            <!-- サブタイトル（日付・手数・結果） -->
                            <Label Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                   Text="{Binding Subtitle}" 
                                   FontSize="12" 
                                   TextColor="Gray"
                                   Margin="0,2,0,0"/>
                            
                            <!-- 棋戦名・持ち時間 -->
                            <Label Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                                   Text="{Binding DetailInfo}"
                                   FontSize="11"
                                   TextColor="SteelBlue"
                                   Margin="0,2,0,0"
                                   IsVisible="{Binding DetailInfo, Converter={StaticResource StringNotEmptyConverter}}"/>
                            
                            <!-- 矢印 -->
                            <Label Grid.Row="0" Grid.RowSpan="4" Grid.Column="2"
                                   Text="›" 
                                   FontSize="24" 
                                   VerticalOptions="Center"
                                   TextColor="Gray"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <HorizontalStackLayout Grid.Row="1" 
                               Spacing="8" 
                               Padding="0,12,0,0"
                               HorizontalOptions="Center">
            <Button Text="＋ 新規作成"
                    Clicked="OnAddClicked"
                    WidthRequest="120"/>
            <Button Text="📁 インポート"
                    Clicked="OnImportClicked"
                    WidthRequest="120"/>
            <Button Text="📋 貼り付け"
                    Clicked="OnPasteClicked"
                    WidthRequest="120"/>
        </HorizontalStackLayout>

    </Grid>
</ContentPage>